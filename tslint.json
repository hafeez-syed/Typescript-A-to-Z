{
  "defaultSeverity": "error",
  "extends": [
    "tslint:latest",
    "tslint-config-prettier"
  ],
  "jsRules": {},
  "rules": {
    "member-access": true,
    "no-inferrable-types": false,
    "no-var-requires": false,
    "typedef": [
      true,
      "###call-signature",
      "###parameter",
      "###arrow-parameter",
      "property-declaration",
      "###variable-declaration",
      "member-variable-declaration"
    ],
    "class-name": true,
    "comment-format": [
      false,
      "check-space"
    ],
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-internal-module": false,
    "no-var-keyword": true,
    "quotemark": [
      false,
      "single",
      "avoid-escape"
    ],
    "no-console": [
      false
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "no-conditional-assignment": true,
    "no-reference": true,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format"
    ],
    "prettier": true
  },
  "rulesDirectory": ["tslint-plugin-prettier"]
}